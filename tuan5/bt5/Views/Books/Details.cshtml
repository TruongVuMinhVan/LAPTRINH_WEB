@model Book
@{
    ViewData["Title"] = "Chi tiết sách";
}
<h2>Chi tiết sách</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">Mã sách</dt>
        <dd class="col-sm-10">@Model.BookId</dd>

        <dt class="col-sm-2">Tên sách</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Tác giả</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price?.ToString("N0")</dd>

        <dt class="col-sm-2">Ảnh</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="~/ImageBooks/@Model.Image" width="120" />
            }
        </dd>

        <dt class="col-sm-2">Chủ đề</dt>
        <dd class="col-sm-10">@Model.Category?.CategoryName</dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-warning">Sửa</a>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a>

