@model buoi2.Models.Category

@{
    ViewData["Title"] = "Xóa danh mục";
}

<h2 class="mb-4 text-danger"><i class="bi bi-trash-fill"></i> Xóa danh mục</h2>

<div class="alert alert-danger">
    Bạn có chắc muốn xóa danh mục <strong>@Model.Name</strong>?
    <br />
    <strong class="text-danger">Tất cả sản phẩm thuộc danh mục này cũng sẽ bị xóa!</strong>
</div>


<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-check-circle"></i> Xác nhận xóa
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
</form>
