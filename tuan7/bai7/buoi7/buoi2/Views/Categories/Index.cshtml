@model IEnumerable<buoi2.Models.Category>

@{
    ViewData["Title"] = "Danh sách danh mục";
}

<h2 class="mb-4 text-primary">@ViewData["Title"]</h2>

<table class="table table-striped table-hover shadow-sm rounded">
    <thead class="table-light">
        <tr>
            <th style="width: 70%;">Tên danh mục</th>
            <th style="width: 30%;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Sửa
                        </a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash3"></i> Xóa
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-4">
    <a asp-action="Add" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Thêm danh mục
    </a>
</div>
